    /* Estilo para los miembros en una fila */
.staff-members {
    display: flex; /* Coloca los miembros en una fila */
    justify-content: space-between; /* Espaciado entre los miembros */
    gap: 20px; /* Espaciado entre los miembros */
    flex-wrap: wrap; /* Permite que los elementos se ajusten a nuevas líneas */
    overflow-x: auto; /* Permite el desplazamiento horizontal si hay demasiados elementos */
}

/* Miembro de staff */
.staff-member {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 200px; /* Ajusta el tamaño de cada miembro */
    margin-bottom: 20px; /* Espaciado inferior entre los miembros */
    flex-grow: 1; /* Permite que los miembros crezcan proporcionalmente si es necesario */
}

/* Estilo para las fotos de los miembros */
.staff-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.staff-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Estilo para el nombre y texto de los miembros */
.staff-name, .staff-text {
    text-align: center;
    margin-top: 5px;
}

/* Estilo para el contenedor general */
.staff-container-special-thanks {
    display: flex;
    flex-direction: column; /* Coloca todo en una columna */
    align-items: center; /* Centra todo en el medio */
    justify-content: center; /* Alinea los elementos verticalmente */
    margin-top: 20px;
    margin-bottom: 0; /* Elimina el margen inferior */
    padding-bottom: 0; /* Elimina el relleno inferior */
}
.staff-container{
display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}
.sobrenosotros-container{
    margin-top: 20px;
    text-align: center;
}
/* Estilo para el texto común debajo de los miembros */
.staff-text-common {
    margin-top: 20px;
    text-align: center;
}

/* Estilo para el pie de página */
footer {
    margin-top: 0; /* Elimina el margen superior */
    padding-top: 0; /* Elimina el relleno superior */
}
/* Estilo para los administradores */
.admin-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Alinea los miembros en el centro */
    margin-top: 20px;
}

.admin-member {
    display: flex;
    align-items: flex-start;
    margin: 20px;
    width: 90%; /* Ocupa el 90% del contenedor principal */
    max-width: 800px; /* Limita el ancho máximo */
}

/* Estilo para la foto de los administradores */
.admin-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    margin-right: 20px; /* Espacio entre la imagen y el texto */
}

.admin-photo img {
    width: 100%; /* La imagen se adapta al ancho del contenedor */
    height: 100%; /* La imagen se adapta a la altura del contenedor */
    object-fit: cover; /* Recorta la imagen manteniendo la proporción */
}

/* Estilo para el texto de los administradores */
.admin-text {
    flex: 1;
    max-width: 600px; /* Limita el ancho máximo del texto */
    text-align: left;
}

.admin-name {
    font-size: 24px;
    font-weight: bold;
    margin-top: 10px;
    text-align: center;
}

.admin-description {
    font-size: 16px;
    margin-top: 10px;
}
.admin-container {
    text-align: center; /* Centra el texto horizontalmente */
    position: relative;
    padding-top: 20px; /* Espacio superior */
  }
  
  .admin-container h3 {
    position: absolute; /* Permite posicionar el h3 sin afectar el flujo del documento */
    top: 0; /* Lo coloca en la parte superior */
    left: 50%; /* Lo coloca en el centro horizontal */
    transform: translateX(-50%); /* Ajusta para que esté perfectamente centrado */
    margin: 0; /* Elimina márgenes por defecto */
  }
  

/* Media Queries para pantallas más pequeñas */
@media (max-width: 768px) {
    .staff-members {
        justify-content: center; /* Centra los elementos en pantallas pequeñas */
    }

    .staff-member {
        width: 100%; /* Hace que los miembros ocupen el 100% del ancho en pantallas pequeñas */
        margin-bottom: 20px; /* Espaciado entre miembros */
    }

    .staff-photo {
        width: 120px; /* Ajusta el tamaño de las fotos en pantallas más pequeñas */
        height: 120px;
    }

    .admin-container {
        flex-direction: column;
        align-items: center; /* Centra los elementos en pantallas pequeñas */
    }

